<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fi.jumi</groupId>
        <artifactId>parent</artifactId>
        <version>0.5-SNAPSHOT</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>

    <artifactId>jumi-core</artifactId>
    <packaging>jar</packaging>

    <properties>
        <shadedPrefix>fi.jumi.core.INTERNAL</shadedPrefix>
    </properties>

    <dependencies>

        <dependency>
            <groupId>fi.jumi.actors</groupId>
            <artifactId>jumi-actors</artifactId>
        </dependency>
        <dependency>
            <groupId>fi.jumi</groupId>
            <artifactId>jumi-api</artifactId>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty</artifactId>
        </dependency>

        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!-- The tests contain utility classes that may be of use to consumers -->

            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-tests</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-test-sources</id>
                        <goals>
                            <goal>test-jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Event stubs -->

            <plugin>
                <groupId>fi.jumi.actors</groupId>
                <artifactId>jumi-actors-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-event-stubs</goal>
                        </goals>
                        <configuration>
                            <targetPackage>fi.jumi.core.events</targetPackage>
                            <eventInterfaces>
                                <interface>java.lang.Runnable</interface>
                                <interface>java.util.concurrent.Executor</interface>
                                <interface>fi.jumi.actors.workers.WorkerListener</interface>
                                <interface>fi.jumi.core.ipc.api.RequestListener</interface>
                                <interface>fi.jumi.core.ipc.api.ResponseListener</interface>
                                <interface>fi.jumi.core.util.Startable</interface>
                                <interface>fi.jumi.core.api.SuiteListener</interface>
                                <interface>fi.jumi.core.discovery.TestFileFinderListener</interface>
                                <interface>fi.jumi.core.runs.RunListener</interface>
                            </eventInterfaces>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Hide external dependencies -->

            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <!-- Regular dependencies (transitive) -->
                                    <exclude>fi.jumi.actors:jumi-actors</exclude>
                                    <exclude>fi.jumi:jumi-api</exclude>
                                </excludes>
                            </artifactSet>
                            <relocations>
                                <!-- Hidden dependencies -->
                                <relocation>
                                    <pattern>org.apache</pattern>
                                    <shadedPattern>${shadedPrefix}.org.apache</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google</pattern>
                                    <shadedPattern>${shadedPrefix}.com.google</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.jboss</pattern>
                                    <shadedPattern>${shadedPrefix}.org.jboss</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.sf.cglib</pattern>
                                    <shadedPattern>${shadedPrefix}.net.sf.cglib</shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <!-- Throw away non-class files of hidden dependencies -->
                                <filter>
                                    <artifact>commons-io:commons-io</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.commons:commons-lang3</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                        <exclude>templates/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.google.guava:guava</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>io.netty:netty</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>cglib:cglib-nodep</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                        <exclude>*</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
